{
  "name": "student-act-api",
  "version": "1.0.0",
  "description": "Backend API for Student-ACT Learning Management System - R.M.K Engineering College",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:clean-architecture": "node scripts/test-clean-architecture.js",
    "test:ca-unit": "jest --testPathPattern=unit/domain --testPathPattern=unit/application",
    "test:ca-integration": "jest --testPathPattern=clean-architecture/integration",
    "test:ca-validation": "jest --testPathPattern=clean-architecture/validation",
    "test:ca-coverage": "jest --coverage --testPathPattern=clean-architecture --testPathPattern=unit/domain --testPathPattern=unit/application",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint:check && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format",
    "setup": "node setup.js",
    "setup:db": "node scripts/setup-database.js",
    "test:api": "node test-api.js",
    "migrate": "node dist/scripts/migrate.js",
    "seed": "node dist/scripts/seed.js",
    "deploy:setup": "sudo ./scripts/deploy-setup.sh",
    "deploy:build": "npm run build:clean && npm run quality",
    "deploy:prod": "npm run deploy:build && npm run migrate",
    "deploy:check": "node -e \"require('./dist/config/upload.config').initializeUploadDirectories()\"",
    "docs": "swagger-jsdoc -d src/config/swagger.ts -o docs/swagger.json src/routes/*.ts",
    "docs:serve": "swagger-ui-serve docs/swagger.json",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "clean": "rm -rf dist coverage logs/*.log node_modules/.cache",
    "precommit": "npm run quality && npm run test:ci"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "postgresql",
    "learning-management-system",
    "education",
    "lms",
    "student-act"
  ],
  "author": "R.M.K Engineering College",
  "license": "MIT",
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@types/bcrypt": "^6.0.0",
    "@types/helmet": "^0.0.48",
    "@types/pdfkit": "^0.17.3",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^4.0.1",
    "react-router-dom": "^7.7.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
