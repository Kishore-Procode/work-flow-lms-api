# Production Environment Configuration
# Student - ACT API

# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=osot
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL=true
DB_MAX_CONNECTIONS=100

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_one_student_one_tree_2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_in_production_one_student_one_tree_2024
JWT_REFRESH_EXPIRES_IN=30d

# File Upload Configuration
# For production deployment, use absolute path
UPLOAD_PATH=/var/www/osot/uploads
# Or relative to dist folder if deploying from dist
# UPLOAD_PATH=../uploads

MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Static file serving configuration
STATIC_FILES_BASE_URL=/uploads

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=your_email@domain.com
FROM_NAME=Student - ACT

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL Configuration
FRONTEND_URL=https://yourdomain.com
FRONTEND_URLS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Documentation - Disable in production
SWAGGER_ENABLED=false

# Invitation Configuration
INVITATION_EXPIRES_DAYS=7
REGISTRATION_REQUEST_EXPIRES_DAYS=30

# Tree Monitoring Configuration
MONITORING_REMINDER_DAYS=180
PHOTO_REQUIRED_MONITORING=true

# Email Configuration (Nodemailer)
EMAIL_USER=your_email@domain.com
EMAIL_PASS=your_email_password
